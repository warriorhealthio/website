extends ../layouts/default.pug

block config

    //- Global Page Configuration
    - var pageTitle = 'Warrior'


block content

    //- * * * * * * * *
    //- * * Navbar  * *
    //- * * * * * * * *
    include mixins/navbar.pug
    +navbar({
        navbarBg: 'bg-white',
        navbarStyle: 'navbar-light',
        navbarBrandColor: 'navbar-dark',
        navbarBtnColor: 'btn-primary',
        navbarContainer: 'container'
    })

    //- * * * * * * * * * *
    //- * * Page Header * *
    //- * * * * * * * * * *

    include mixins/header.pug
    +header({
        pageHeaderBg: 'bg-white',
        pageHeaderStyle: 'page-header-white',
        svgBorderFill: 'text-dark'
    })
        .page-header-content
            .container
                .row.align-items-center
                    .col-lg-7
                        h1.page-header-title Sports medicine and physical therapy for the athlete in everyone
                        p.page-header-text.mb-5 We provide performance focused care for injury prevention, recovery and reconditioning. Join our waitlist to learn more
                        .row
                            .col-lg-6.form-group
                                a.btn.btn-teal.btn-marketing.rounded-pill(href='individual.html') For inidividuals
                            .col-lg-6.form-group   
                                a.btn.btn-teal.btn-marketing.rounded-pill(href='provider.html') For providers

                    .col-lg-5
                        img.img-fluid(src='assets/img/individuals-page/runner.jpg')

    include mixins/header.pug
    +header({

        pageHeaderStyle: 'page-header-dark',
        sectionPadding: 'py-1',
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: 'text-white'
    })

        .container
            .row.align-items-center
                .col-lg-5
                    img.img-fluid(src='assets/img/svgs/holding-phone-colour.svg').mb-5
                .col-lg-7
                    h1.page-header-title Warrior virtual care
                    p.page-header-text A new standard of sports medicine, delivering individualized care for everyone, from those just starting their fitness journey to experienced recreational athletes and weekend warriors
            .row
                .col-lg-12.text-center
                    a.btn.btn-teal.btn-marketing.rounded-pill(href='individual.html') For individuals

            .row.pt-4
                .col-lg-4.mb-5.mb-lg-0
                    .card.h-100
                        .card-body.p-5
                            .text-center
                                img.img-fluid(src='assets/img/recover-injury.png', width="60px").mb-2
                                .h1 Recover from injury
                                .p.text-dark Meet with a provider to address overuse injuries like runner's knee, swimmer's shoulder, tennis elbow and more
                
                .col-lg-4.mb-5.mb-lg-0
                    .card.h-100
                        .card-body.p-5
                            .text-center
                                img.img-fluid(src='assets/img/prevent-injury.png', width="60px").mb-2
                                .h1 Prevent injury
                                .p.text-dark Prepare your body for action and never miss a beat. Avoid downtime and costly procedures

                .col-lg-4.mb-5.mb-lg-0
                    .card.h-100
                        .card-body.p-5
                            .text-center
                                img.img-fluid(src='assets/img/anywhere.png', width="60px").mb-2
                                .h1 On your own schedule, anywhere
                                .p.text-dark Meet with a virtual provider using sports medicine telehealth



